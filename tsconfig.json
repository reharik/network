{
  "files": [],
  "references": [
    {
      "path": "apps/api"
    },
    {
      "path": "apps/web"
    },
    {
      "path": "packages/contracts"
    },
    {
      "path": "packages/validators"
    }
  ],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@network/contracts": ["packages/contracts/dist/src/index.d.ts"],
      "@network/contracts/*": ["packages/contracts/dist/src/*.d.ts"],
      "@network/validators": ["packages/validators/dist/index.d.ts"],
      "@network/validators/*": ["packages/validators/dist/*.d.ts"]
    },
    "types": ["typia"],
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ],
    "strictNullChecks": true
  },
  "include": ["types/**/*.d.ts"]
}
