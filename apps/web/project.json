{
  "name": "web",
  "projectType": "application",
  "sourceRoot": "{projectRoot}/src",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{workspaceRoot}/apps/web/dist"],
      "dependsOn": ["validators:build"],
      "options": {
        "outputPath": "apps/web/dist",
        "configFile": "{projectRoot}/vite.config.js"
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "options": {
        "buildTarget": "web:build",
        "port": 8080
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "options": {
        "buildTarget": "web:build",
        "port": 4173
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,jsx}"],
        "format": "tools/eslint-formatters/stylish-linkify.js",
        "forceColor": true,
        "fix": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js",
        "passWithNoTests": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write {projectRoot}/src/**/*.{ts,tsx,js,jsx,json}"
      }
    }
  },
  "tags": []
}
