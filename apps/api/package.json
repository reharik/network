{
  "name": "@app/api",
  "private": true,
  "description": "",
  "keywords": [],
  "license": "ISC",
  "author": "",
  "type": "module",
  "main": "dist/apps/api/main.js",
  "scripts": {
    "build": "nx build api",
    "build:dev": "nx build api --configuration=development",
    "build:prod": "nx build api --configuration=production",
    "db:make": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts migrate:make",
    "db:migrate": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts migrate:latest",
    "db:migrate:prod": "knex --knexfile dist/knexfile.js migrate:latest",
    "db:rollback": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts migrate:rollback",
    "db:seed": "dotenv -e apps/api/.env -- tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts seed:run",
    "dev": "nodemon",
    "gen:container": "rimraf src/di/awilix.autoload.d.ts && tsx src/codeGen/gen-awilix-container.ts",
    "postinstall": "npm run gen:container",
    "lint": "nx run api:lint",
    "localstack:check": "tsx src/scripts/localstack-test-utils.ts",
    "localstack:setup": "docker compose -f ../../docker-compose-dev.yml -f ../../docker-compose-dev.override.yml up localstack -d",
    "serve": "nx serve api",
    "start": "node dist/index.js",
    "start:dev": "node --enable-source-maps dist/index.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' nx test api --runInBand --detectOpenHandles",
    "test:communication": "tsx src/scripts/test-communication-services.ts",
    "test:production": "tsx src/scripts/test-production-services.ts",
    "test:retrieve:messages": "tsx src/scripts/retrieve-localstack-messages.ts"
  },
  "dependencies": {
    "@aws-sdk/client-connect": "^3.908.0",
    "@aws-sdk/client-ses": "^3.908.0",
    "@aws-sdk/client-sns": "^3.908.0",
    "@koa/bodyparser": "github:reharik/bodyparser#allow_custom_reviver_function",
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@network/contracts": "*",
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.2",
    "case-anything": "^3.1.2",
    "dotenv": "^16.6.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "koa": "^2.16.0",
    "koa-body": "^6.0.1",
    "luxon": "^3.7.1",
    "pg": "^8.16.3",
    "smart-enums": "^0.0.22",
    "uuid": "^11.1.0",
    "winston": "^3.15.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/knex": "^0.15.2",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.0",
    "fast-glob": "^3.3.3",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-patch": "^3.3.0",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^6.3.5",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
