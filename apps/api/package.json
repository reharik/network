  "type": "module",
  "main": "dist/apps/api/main.js",
  "scripts": {
    "build": "nx build api",
    "build:dev": "nx build api --configuration=development",
    "build:prod": "nx build api --configuration=production",
    "db:make": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts migrate:make",
    "db:migrate": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts migrate:latest",
    "db:migrate:prod": "knex --knexfile dist/knexfile.js migrate:latest",
    "db:rollback": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts migrate:rollback",
    "db:seed": "tsx ../../node_modules/knex/bin/cli.js --knexfile src/knexfile.ts seed:run",
    "dev": "nodemon",
    "lint": "nx run api:lint",
    "serve": "nx serve api",
    "start": "node dist/index.js",
    "start:dev": "node --enable-source-maps dist/index.js",
    "test": "nx jest:test --runInBand --detectOpenHandles"
  },
  "dependencies": {
    "@koa/cors": "^5.0.0",
    "@koa/router": "^13.1.0",
    "@network/contracts": "*",
    "awilix": "^12.0.5",
    "bcryptjs": "^3.0.2",
    "dotenv": "^16.6.1",
    "jsonwebtoken": "^9.0.2",
    "knex": "^3.1.0",
    "koa": "^2.16.0",
    "koa-body": "^6.0.1",
    "luxon": "^3.7.1",
    "pg": "^8.16.3",
    "smart-enums": "^0.0.9",
    "uuid": "^11.1.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/knex": "^0.15.2",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.0.0",
    "tsx": "^4.20.5"
  }
}
