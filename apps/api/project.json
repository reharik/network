{
  "name": "api",
  "projectType": "application",
  "sourceRoot": "{projectRoot}/src",
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["contracts:build", "validators:build"],
      "options": {
        "platform": "node",
        "format": ["esm"],
        "bundle": true,
        "main": "{projectRoot}/src/index.ts",
        "outputPath": "{projectRoot}/dist",
        "tsConfig": "{projectRoot}/tsconfig.json",
        "assets": [
          {
            "input": "{projectRoot}",
            "glob": "assets/**/*",
            "output": "assets"
          }
        ],
        "external": [
          "@network/contracts",
          "@network/validators",
          "pg",
          "mysql",
          "mysql2",
          "sqlite3",
          "better-sqlite3",
          "tedious",
          "oracledb",
          "pg-query-stream"
        ]
      },
      "configurations": {
        "development": {
          "sourcemap": true
        },
        "production": {
          "minify": true
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "options": {
        "buildTarget": "api:build:development",
        "watch": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["{projectRoot}/**/*.{ts,tsx,js,mjs,cjs}"],
        "format": "tools/eslint-formatters/stylish-linkify.js",
        "forceColor": true,
        "fix": false
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js",
        "passWithNoTests": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write {projectRoot}/src/**/*.{ts,tsx,js,jsx,json}"
      }
    },
    "gen:container": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx src/codeGen/gen-awilix-container.ts",
        "cwd": "{projectRoot}"
      }
    },
    "docker-build:prod": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f docker-compose.prod.yml build api"
      }
    },
    "docker-up:dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker compose -f docker-compose.dev.yml up --build"
      }
    }
  },
  "tags": ["type:app"]
}
