{
  "name": "network",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "nx run-many -t build",
    "build:clean": "nx reset && nx run-many -t build",
    "dance": "npm run format && npm run build && npm run lint && npm run test",
    "db:migrate": "NODE_OPTIONS=--import=tsx npm exec --workspace @app/api -- knex --knexfile src/knexfile.ts migrate:latest",
    "db:migrate:prod": "NODE_OPTIONS=--import=tsx npm exec --workspace @app/api -- knex --knexfile src/knexfile.ts migrate:latest",
    "db:seed": "NODE_OPTIONS=--import=tsx npm exec --workspace @app/api -- knex --knexfile src/knexfile.ts seed:run",
    "dev:api": "nx run api:serve",
    "dev:web": "nx run web:serve",
    "format": "nx run-many --target=format --all",
    "format:check": "prettier --check .",
    "gen:container": "nx run api:gen:container",
    "graph": "nx graph",
    "lint": "nx run-many -t lint --projects=api,web,contracts,validators",
    "lint:fix": "nx run-many -t lint --projects=api,web,contracts,validators -- --fix",
    "nuke": "rimraf node_modules apps/*/node_modules packages/*/node_modules apps/*/dist packages/*/dist dist .nx/cache && npm install && npm run build:clean && npm run gen:container && npm run lint && npm run test",
    "nuke:lite": "rimraf apps/*/dist packages/*/dist dist .nx/cache && npm run build:clean && npm run gen:container && npm run lint && npm run test",
    "nx": "nx",
    "test": "nx run-many -t test --all",
    "test:ci": "nx run-many -t test --all -- --runInBand",
    "test:watch": "nx run-many -t test --all -- --watch"
  },
  "dependencies": {
    "parse-fetch": "^0.0.6",
    "smart-enums": "^0.0.21",
    "typia": "^9.7.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@jest/globals": "^30.1.2",
    "@nx/esbuild": "21.4.1",
    "@nx/eslint": "^21.4.1",
    "@nx/jest": "^21.4.1",
    "@nx/js": "21.4.1",
    "@nx/react": "21.4.1",
    "@nx/vite": "21.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-stylish": "^8.40.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jest": "^30.1.3",
    "jest-environment-jsdom": "^30.1.2",
    "nx": "21.4.1",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "prettier-plugin-packagejson": "^2.5.19",
    "rimraf": "^6.0.1",
    "sqlite3": "^5.1.7",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "ts-patch": "^3.3.0",
    "tslib": "^2.6.3",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
