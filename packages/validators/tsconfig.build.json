{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "emitDeclarationOnly": false,
    "composite": false,
    "rootDir": "src",
    "moduleResolution": "Node",
    "module": "ESNext",
    "target": "ES2022",
    "skipLibCheck": true,
    "baseUrl": "../.."
  },
  "include": ["src/**/*", "src/_typia/**/*"]
}
