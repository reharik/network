{
  "name": "validators",
  "projectType": "library",
  "sourceRoot": "{projectRoot}/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["contracts:build"],
      "options": {
        "command": "npm run build",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "eslintConfig": "{projectRoot}/eslint.config.js",
        "lintFilePatterns": ["{projectRoot}/src/**/*.{ts,js}"],
        "format": "tools/eslint-formatters/stylish-linkify.js",
        "forceColor": true,
        "fix": false,
        "verbose": true
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "{projectRoot}/jest.config.js",
        "passWithNoTests": true
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write {projectRoot}/src/**/*.{ts,tsx,js,jsx,json}"
      }
    }
  },
  "tags": []
}
