{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,
    "outDir": "./dist",
    "baseUrl": "../..",
    "moduleResolution": "bundler",
    "types": ["jest", "node"],
    "plugins": [
      {
        "transform": "typia/lib/transform"
      }
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["**/*.spec.ts", "dist", "node_modules"]
}
